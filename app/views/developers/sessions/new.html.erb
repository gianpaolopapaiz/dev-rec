<div class="login flex-grow-1">
  <div class="container h-100 my-auto">
    <div class="login-int h-100 p-0">
      <div class="row justify-content-center align-items-center h-100 py-5">
        <div class="col-10 col-md-6 col-lg-4 p-4" style="background-color: white">

            <h2 class="text-center"><strong>DEVELOPER</strong></h2>
            <h2 class="text-center mb-3"><strong>Log in</strong></h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Log in", class:"btn btn-primary btn-lg w-100" %>
              </div>
            <% end %>
            <%= render "customers/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>
