<h1> Developer Dashboard</h1>
<h3>My info:</h3>
<div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-centered">
  <div class="card">
    <div class="card-img-top"><%= cl_image_tag current_developer.photo.key, :width => "300" if current_developer.photo.attached? %> </div>
        <div class="card-body">
          <h5 class="card-title"><strong><%= current_developer.name %></strong></h5>
          <li class="card-text">Skills: <%= current_developer.skills %></li>
          <li> GitHub: <%= current_developer.github_url %></li>
          <li>Age: <%= current_developer.age %></li> 
          <li> Years of Experience: <%= current_developer.years_experience %></li>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<br>
<h3>All proposals:</h3>
<% if current_developer.proposals.length < 1 %>
  <p>(No proposals sent yet!)</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Offer title</th>
        <th scope="col">Price</th>
        <th scope="col">Status</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% current_developer.proposals.each_with_index do |proposal, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= proposal.offer.title %></td>
          <td><%= proposal.price %></td>
          <td><%= proposal.status %></td>
          <td>
            <%#= link_to 'show', customer_offer_path(current_customer, offer), class: 'btn btn-primary'  %>
            <%#= link_to 'remove', offer_path(offer), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger'  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<h3>Available offers:</h3>
<% if @offers.length < 1 %>
  <p>(No offers available yet!)</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Target_date</th>
        <th scope="col">Description</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @offers.each_with_index do |offer, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= offer.title %></td>
          <td><%= offer.target_date %></td>
          <td><%= offer.description %></td>
          <td>
            <%= link_to 'Send Proposal',  new_offer_proposal_path(offer), class: 'btn btn-primary'  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to "Back to Home", root_path %>
