<div class="login">
  <div class="container pt-5">
    <div class="login-int">
      <div class="row justify-content-center">
        <div class="col-10 col-md-6 col-lg-4" style="background-color: white">
          <h1 class="text-center mb-5">Creating proposal</h1>

          <%= simple_form_for [@offer, @proposal] do |f| %>
            <%= f.input :details %>
            <%= f.input :estimated_date %>
            <%= f.input :price %>
            <%= f.submit class:"btn btn-primary btn-lg w-100"%>
            <a>.</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>