<div class="login flex-grow-1 mb-0">
  <div class="container h-100 my-auto">
    <div class="login-int h-100 p-0">
      <div class="row justify-content-center align-items-center h-100 py-5">
        <div class="col-10 col-md-6 col-lg-6 p-4" style="background-color: white">
          <h2 class="text-center mb-3"><strong>Add Proposal</strong></h2>

          <%= simple_form_for [@offer, @proposal] do |f| %>
            <%= f.input :details %>
            <%= f.input :estimated_date %>
            <%= f.input :price %>
            <%= f.submit class:"btn btn-primary btn-lg w-100"%>
            <p class='mt-2'><%= link_to "Back", :back %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>