<div class="login">
  <div class="container pt-5">
    <div class="login-int">
      <div class="row justify-content-center">
        <div class="col-10 col-md-6 col-lg-4" style="background-color: white">
          <h1 class="text-center mb-5">Creating offer</h1>
          <%= simple_form_for [current_customer, @offer] do |f| %>
            <%= f.input :title %>
            <%= f.input :description %>
            <%= f.input :target_date%>
            <%= f.submit class:"btn btn-primary btn-lg w-100"%>
            <a>.</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>