<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://cdn4.vectorstock.com/i/thumb-large/26/38/professional-programmer-character-smiling-man-vector-21172638.jpg" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <% if customer_signed_in? %>
        <li class="nav-item dropdown">
          <%= link_to(root_path) do %>
            <i class="fa fa-home"></i>
          <% end %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Customer Page", customer_path(current_customer), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_customer_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% elsif developer_signed_in? %>
        <li class="nav-item dropdown">
          <%= link_to(root_path) do %>
            <i class="fa fa-home"></i>
          <% end %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Developer Page", developer_path(current_developer), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_developer_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <%= link_to(root_path) do %>
            <i class="fa fa-home"></i>
          <% end %>
          <%= link_to "Login", "#", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

              <%= link_to "as Customer", new_customer_session_path, class: "dropdown-item" %>
              <%= link_to "as Developer", new_developer_session_path, class: "dropdown-item" %>
          </div>

        </li>
      <% end %>
    </ul>
  </div>
</div>
